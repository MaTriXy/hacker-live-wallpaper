<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:holo="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.gulshansingh.hackerlivewallpaper.settings.SeekBarPreference
        android:max="20"
        holo:defaultValue="@integer/default_num_bits"
        holo:key="num_bits"
        holo:title="Number of Bits" />
    <com.gulshansingh.hackerlivewallpaper.settings.SeekBarPreference
        android:max="20"
        holo:defaultValue="@integer/default_falling_speed"
        holo:key="falling_speed"
        holo:title="Falling Speed" />
    <com.gulshansingh.hackerlivewallpaper.settings.SeekBarPreference
        android:max="20"
        holo:defaultValue="@integer/default_change_bit_speed"
        holo:key="change_bit_speed"
        holo:title="Bit Change Speed" />
    <com.gulshansingh.hackerlivewallpaper.settings.SeekBarPreference
        android:max="40"
        holo:defaultValue="@integer/default_text_size"
        holo:key="text_size"
        holo:title="Bit Text Size" />

</PreferenceScreen>